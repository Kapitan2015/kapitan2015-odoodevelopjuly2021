<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
		<!-- model.name inherit form view -->
		<record id="account_invoice_project_id_view" model="ir.ui.view">
			<field name="name">account.invoice.project.id.view</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="hs_customer_class_code.account_invoice_classcode_inherit1"/>
			<field name="arch" type="xml">
				
				<xpath expr="//field[@name='class_code']" position="after">
					<field name="charfield_project" readonly="1" attrs="{'invisible':[('customer_is_fund','=',False)]}"/>
				</xpath>
				
			</field>
		</record>

		<!-- OCULTANDO BOTON PREVIEW_INVOICE -->
		<record id="account_invoice_button_preview_view" model="ir.ui.view">
			<field name="name">account.invoice.button.preview.view</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
				<xpath expr="//button[@name='preview_invoice']" position="replace">       
                	<button name="preview_invoice" type="object" string="Preview" invisible="1"/>
            	</xpath>
			</field>
		</record>
		
